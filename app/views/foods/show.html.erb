<div class="row">
  <div class="col-xs-10 col-sm-11 food-show">
    <h1><%= @food.title %></h1>
    <p><%= @food.calories %>&nbsp;calories</p>
    <p><%= @food.category.title %></p>
    <p><%= @food.macro_group %>&nbsp;group</p>
    <p><%= @food.date.strftime("%d %b %Y")%>&nbsp;</p>
    <p>
      Created By: <%= @food.user_full_name %>
    </p>

      <%= link_to 'Edit', edit_food_path(@food), class: 'btn btn-primary' %>

      <%= link_to 'Delete', food_path(@food),
                            method: :delete,
                            data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>
</div>
